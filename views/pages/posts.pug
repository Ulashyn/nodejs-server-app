extends ../layout.pug

block content
  div.uk-container
    h1 Posts
    div(uk-grid class='uk-child-width-1-2@s uk-child-width-1-3@m').uk-grid-match
      div.uk-card.uk-card-default.uk-card-hover
        div.uk-card-header
          h3.uk-card-title Title
        div.uk-card-body
          p Description
          a(href='/posts/' + 1, target='_blank').uk-button.uk-button-default Read
        div.uk-card-footer
          p.uk-text-meta
            time(datetime='2016-04-01T19:00')= Date
